
function [theta] = estimateAttitude(yaw_rate, t)
    %%
    % Integrate Gyroscope yaw_rate from robot to estimate yaw in global coordinate frame.
    % 
    % INPUT:
    %       - yaw_rate (1XN): Yaw rate of robot [rad/s]
    %       - t (1xN): Time [s]
    %
    % OUTPUT:
    %       - theta (1xN): Integrated yaw [rad]
    %
    
    %%
    % Params
    t_stationary = 20; % [s]
    inverted = true;
    theta_start = - pi/2;
    
    % Variables
    N = length(t);
    theta = zeros(1,N) + theta_start;
    idx_statioary = find(t<=t_stationary, 1, 'last');
    theta_stationary = zeros(1,idx_statioary);
    %%
    
    yaw_rate = (-1)^(inverted);
    
    % Estimate bias while vehicle is stationary
    yaw_rate_bias = mean(yaw_rate(1:idx_statioary));
    
    % Integrate angular rate
    for i = 2:N
        dt = t(i) - t(i-1);
        theta(i) = (theta(i-1)  + (yaw_rate(i) - yaw_rate_bias)*dt );
    end
    
    theta = theta* (-1)^(inverted);
    
    % Debias
%     theta = wrapTo2Pi(theta);
end