%% Wheeled platform
%% P3)c)
% Params

% state
x_0 = zeros(3,1);

% Input
u = zeros(2,1);

% time
t = 0;
dt = 0.01;
t_end = 20;

% helper
n_steps = t_end/dt;
x_history = zeros(3, n_steps);
x_history(:,1) = x_0;

%% c1) Constant angle
u(1) = 3;
u(2) = pi/2;

figure()
title('Wheeled platform - Constant steering')

% simulation
for i = 2:n_steps
    t = t + dt;
    x_history(1,i) = x_history(1,i-1) + dt.* u(1) * cos(x_history(1,i-1));
    x_history(2,i) = x_history(2,i-1) + dt.* pendulum(x_history(:,i-1), u);
    
    plot(x_history(1,i), x_history(1,i))
    hold on;
    xlabel('x [m]') 
    ylabel('y [m]')
end



